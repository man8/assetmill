{
  "compilerOptions": {
    // Target ES2020 for Node.js 18+ compatibility as specified in package.json engines
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    
    // Output configuration for CLI tool distribution
    "outDir": "./dist",
    "rootDir": "./src",
    
    // Strict type checking for robust CLI tool development
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Generate declaration files for library usage
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    // Enable JSON module imports for package.json version reading
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}
